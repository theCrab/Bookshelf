<h2>All books</h2>

<div id="books">
  <% if books.any? %>
    <% books.each do |book| %>
    <div class="book">
      <h3><%= book.title %></h3>
      <p>by <strong><%= book.author %></strong></p>
    </div>
    <% end %>
  <% else %>
    <p class="placeholder">There are no books yet.</p>
  <% end %>
</div>
